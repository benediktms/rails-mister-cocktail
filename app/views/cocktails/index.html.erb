<div class="container-md">
  <div class="row-justify-content-md-center">
    <div class="col-8">

      <h1>Welcome to Ben's cocktail bar!</h1>

      <%= link_to new_cocktail_path do %>
       <button class="btn btn-primary add-cocktail" type="button">Create new cocktail</button>
      <% end %>

      <div class="cards">

        <% @cocktails.each do |cocktail| %>

          <div class="card" style="width: 18rem;">

            <% if cocktail.photo.attached? %>
              <%= cl_image_tag(
                    cocktail.photo.key,
                    class: "card-img-top center-cover"
                  ) %>
            <% end %>

            <div class="card-body">

              <h5 class="card-title"><%= cocktail.name %></h5>


              <%= link_to cocktail_path(cocktail) do %>
                <button type="button" class="btn btn-outline-primary">Details</button>
              <% end %>

            </div>

          </div>

        <% end %>

      </div>

    </div>

  </div>
</div>
