
<div class="container-md">

  <div class="row">
    <div class="col">

      <%= link_to root_path do %>
        <i class="fas fa-long-arrow-alt-left btn-back"></i>
      <% end %>

    </div>
  </div>


  <div class="row">
    <div class="col-6">

      <div class="row">

        <div class="col">
          <h1><%= @cocktail.name %></h1>
        </div>

        <div class="col">
          <%= link_to edit_cocktail_path do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>

      </div>

      <div class="ingredients-container">

        <% @cocktail.doses.each do |dose| %>

          <div class="row">

            <div class="col-5">
              <p><%= dose.ingredient.name %></p>
            </div>

            <div class="col-5">
              <p><%= dose.description %></p>
            </div>

            <div class="col-2">

              <%= link_to dose_path(dose),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>

            </div>

          </div>
        <% end %>

        <div class="row">

          <div class="col">
            <%= link_to new_cocktail_dose_path(@cocktail) do %>
              <button class="btn btn-primary">Add ingredient</button>
            <% end %>
          </div>

        </div>
      </div>

    </div>

    <div class="col-6">

      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag(@cocktail.photo.key, width: 200) %>
      <% end %>

    </div>

  </div>
</div>